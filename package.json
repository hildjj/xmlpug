{
  "name": "xmlpug",
  "version": "3.0.0",
  "description": "Transform XML documents with Pug templates",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rm -rf coverage doc man .nyc_output",
    "lint": "eslint lib test",
    "coverage": "nyc npm test",
    "coveragehtml": "nyc report -r html",
    "precoveragehtml": "npm run coverage",
    "test": "nodeunit test/*.test.js && ava test/*.ava.js",
    "watch": "watch 'npm run coveragehtml' lib/ test/",
    "release": "npm version patch && git push --follow-tags && npm publish",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "precoveralls": "npm run coverage",
    "live": "live-server --port=4001 --ignorePattern='(js|css|png)$' coverage",
    "dev": "npm-run-all -p --silent watch live"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hildjj/xmlpug"
  },
  "keywords": [
    "xml",
    "jade",
    "pug",
    "xsl",
    "xslt",
    "transform",
    "template"
  ],
  "author": "Joe Hildebrand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hildjj/xmlpug/issues"
  },
  "homepage": "https://github.com/hildjj/xmlpug",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "xmlpug": "./bin/xmlpug"
  },
  "devDependencies": {
    "ava": "^4.0.0-alpha.2",
    "coveralls": "latest",
    "eslint": "latest",
    "live-server": "latest",
    "nodeunit": "latest",
    "npm-run-all": "latest",
    "nyc": "latest",
    "watch": "latest"
  },
  "dependencies": {
    "bluebird": "3.7",
    "commander": "8.1",
    "dentin": "3.0",
    "jstransformer-cdata": "1.0",
    "libxmljs2": "^0.28.0",
    "pug": "3.0.2",
    "resolve": "1.20"
  },
  "engines": {
    "node": ">=12.19"
  },
  "nyc": {
    "exclude": [
      "examples",
      "test"
    ]
  }
}
