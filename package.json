{
  "name": "xmlpug",
  "version": "3.0.0",
  "description": "Transform XML documents with Pug templates",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf coverage .nyc_output",
    "lint": "eslint . --ext js",
    "coverage": "nyc -r lcov npm test",
    "test": "ava test/*.ava.js",
    "release": "npm version patch && git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hildjj/xmlpug"
  },
  "keywords": [
    "xml",
    "jade",
    "pug",
    "xsl",
    "xslt",
    "transform",
    "template"
  ],
  "author": "Joe Hildebrand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hildjj/xmlpug/issues"
  },
  "homepage": "https://github.com/hildjj/xmlpug",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "xmlpug": "./bin/xmlpug"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "^0.0.8",
    "@types/node": "^16.7.13",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jsdoc": "^36.0.8",
    "eslint-plugin-node": "^11.1.0",
    "nyc": "latest",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "commander": "8.1",
    "dentin": "3.0",
    "eslint-plugin-ava": "^12.0.0",
    "libxmljs2": "^0.28.0",
    "pug": "3.0.2",
    "resolve": "1.20",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=12.19"
  },
  "types": "types/lib/index.d.ts",
  "nyc": {
    "exclude": [
      "examples",
      "test"
    ]
  }
}
