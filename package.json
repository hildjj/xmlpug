{
  "name": "xmlpug",
  "version": "3.0.0",
  "description": "Transform XML documents with Pug templates",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf coverage .nyc_output",
    "lint": "eslint . --ext js",
    "coverage": "nyc -r lcov npm test",
    "test": "ava --serial test/*.ava.js",
    "release": "npm version patch && git push --follow-tags && npm publish",
    "types": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hildjj/xmlpug"
  },
  "keywords": [
    "xml",
    "jade",
    "pug",
    "xsl",
    "xslt",
    "transform",
    "template"
  ],
  "author": "Joe Hildebrand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hildjj/xmlpug/issues"
  },
  "homepage": "https://github.com/hildjj/xmlpug",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "xmlpug": "./bin/xmlpug"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "^0.1.3",
    "@types/node": "^17.0.31",
    "@types/pug": "2.0.6",
    "ava": "^4.2.0",
    "eslint": "^8.15.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-node": "^11.1.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "commander": "9.2",
    "dentin": "3.0",
    "libxmljs2": "^0.30.1",
    "pug": "3.0.2",
    "resolve": "1.22"
  },
  "engines": {
    "node": ">=12.19"
  },
  "types": "types/lib/index.d.ts",
  "nyc": {
    "exclude": [
      "examples",
      "test"
    ]
  }
}
