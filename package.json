{
  "name": "xmlpug",
  "version": "4.0.0",
  "description": "Transform XML documents with Pug templates",
  "main": "./lib/index.js",
  "type": "module",
  "types": "types/lib/index.d.ts",
  "files": [
    "bin",
    "lib",
    "types"
  ],
  "scripts": {
    "clean": "rimraf -g coverage types docs examples/*.html",
    "docs": "typedoc",
    "lint": "eslint .",
    "coverage": "c8 npm test",
    "test": "ava --serial test/*.ava.js",
    "types": "tsc",
    "build": "npm run clean && npm run types && npm run lint && npm run docs && npm run coverage && npm pack --dry-run",
    "version": "package-extract -s -o lib/version.js name version && git add lib/version.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hildjj/xmlpug.git"
  },
  "keywords": [
    "xml",
    "jade",
    "pug",
    "xsl",
    "xslt",
    "transform",
    "template"
  ],
  "author": "Joe Hildebrand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hildjj/xmlpug/issues"
  },
  "homepage": "https://github.com/hildjj/xmlpug",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "xmlpug": "bin/xmlpug.js"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "^6.0.13",
    "@eslint/markdown": "7.1.0",
    "@types/node": "^24.2.0",
    "@types/pug": "2.0.10",
    "ava": "^6.4.1",
    "c8": "10.1.3",
    "eslint": "^9.32.0",
    "eslint-plugin-ava": "^15.1.0",
    "eslint-plugin-jsdoc": "^52.0.2",
    "eslint-plugin-node": "^11.1.0",
    "package-extract": "3.1.3",
    "rimraf": "^6.0.1",
    "typedoc": "0.28.9",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dentin": "^4.0.2",
    "libxmljs2": "^0.37.0",
    "pug": "^3.0.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  }
}
