{
  "name": "xmlpug",
  "version": "2.0.0",
  "description": "Transform XML documents with Pug templates",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rm -rf coverage lib doc man",
    "lint": "coffeelint src test",
    "coffee": "coffee -cm -o lib/ src",
    "coverage": "istanbul cover nodeunit test/*.coffee",
    "precoverage": "npm run coffee -s",
    "test": "nodeunit test/*.coffee",
    "pretest": "npm run coffee -s",
    "prepublish": "npm run coffee -s",
    "watch": "watch 'npm run coverage' src/ test/",
    "release": "npm version patch && git push --follow-tags && npm publish",
    "ci": "npm run coverage  -s && cat ./coverage/lcov.info | coveralls",
    "live": "live-server --port=4001 --ignorePattern='(js|css|png)$' coverage/lcov-report",
    "dev": "npm-run-all -p --silent watch live"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hildjj/xmlpug"
  },
  "keywords": [
    "xml",
    "jade",
    "pug",
    "xsl",
    "xslt",
    "transform",
    "template"
  ],
  "author": "Joe Hildebrand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hildjj/xmlpug/issues"
  },
  "homepage": "https://github.com/hildjj/xmlpug",
  "directories": {
    "lib": "lib"
  },
  "bin": {
    "xmlpug": "./bin/xmlpug"
  },
  "devDependencies": {
    "coffee-script": "latest",
    "coffeelint": "latest",
    "coveralls": "latest",
    "istanbul": "latest",
    "live-server": "latest",
    "nodeunit": "latest",
    "npm-run-all": "latest",
    "source-map-support": "latest",
    "watch": "latest"
  },
  "dependencies": {
    "bluebird": "3.4",
    "commander": "2.9",
    "dentin": "0.2",
    "jstransformer-cdata": "1.0",
    "libxmljs": "0.18",
    "pug": "^2.0.0-beta6",
    "resolve": "1.1"
  }
}
