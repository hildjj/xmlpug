{
  "include": ["lib/*.js"],

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "outDir": "types",
    "target": "ES2020",
    "resolveJsonModule": true
  }
}
